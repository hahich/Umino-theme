<div id="wishlist-modal" class="modal" aria-hidden="true" role="dialog" aria-label="Wishlist">
	<div class="modal__overlay" data-close></div>
	<div class="modal__content" role="document">
		<header class="modal__header">
			<h3 class="modal__title">Your Wishlist</h3>
			<button type="button" class="modal__close" aria-label="Close" data-close>
				&#215;
			</button>
		</header>
		<section class="modal__body">
			<div class="wishlist-empty" data-wishlist-empty>
				<p>No items saved yet.</p>
			</div>
			<div class="wishlist-items" data-wishlist-items></div>
		</section>
		<footer class="modal__footer">
			<a href="/collections/all" class="modal__cta">Browse products</a>
		</footer>
	</div>
</div>

{% style %}
.modal {position:fixed; inset:0; display:none; align-items:center; justify-content:center; z-index:1100;}
.modal.is-open {display:flex;}
.modal__overlay{position:absolute; inset:0; background:rgba(0,0,0,.5); backdrop-filter:blur(4px);} 
.modal__content{position:relative; width: min(560px, 92vw); max-height: 82vh; background:#fff; border-radius:12px; box-shadow:0 20px 60px rgba(0,0,0,.15); display:flex; flex-direction:column; overflow:hidden;}
.modal__header{display:flex; align-items:center; justify-content:space-between; padding:16px 18px; border-bottom:1px solid #eee;}
.modal__title{margin:0; font-size:18px; font-weight:600;}
.modal__close{background:none; border:none; font-size:24px; line-height:1; cursor:pointer; padding:6px; border-radius:6px;}
.modal__close:hover{background:#f5f5f5;}
.modal__body{padding:16px; overflow:auto;}
.wishlist-items{display:grid; grid-template-columns:1fr; gap:12px;}
.wishlist-item{display:flex; gap:12px; padding:10px; border:1px solid #eee; border-radius:8px; align-items:center;}
.wishlist-thumb{width:60px; height:60px; border-radius:6px; object-fit:cover; background:#f6f6f6;}
.wishlist-meta{flex:1; min-width:0;}
.wishlist-title{margin:0 0 4px; font-size:14px; font-weight:600; color:#111; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;}
.wishlist-actions{display:flex; gap:8px;}
.btn{appearance:none; border:none; cursor:pointer; border-radius:8px; padding:10px 12px; font-weight:600; font-size:14px;}
.btn--primary{background:#2ed573; color:#fff;}
.btn--secondary{background:#f5f5f5; color:#111;}
.modal__footer{padding:12px 16px; border-top:1px solid #eee;}
.modal__cta{display:block; text-align:center; background:#2ed573; color:#fff; padding:12px; border-radius:8px; text-decoration:none; font-weight:600;}
@media (min-width: 720px){ .wishlist-items{grid-template-columns:1fr;} }
{% endstyle %} 