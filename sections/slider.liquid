<section class="slider-section">
  <div class="slider-container">
    <div class="slider-wrapper">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          <div class="slide" {{ block.shopify_attributes }}>
            {% if block.settings.slide_image != blank %}
              <div class="slide-image">
                <img
                  src="{{ block.settings.slide_image | image_url: width: 1200, format: 'webp' }}"
                  srcset="
                    {{ block.settings.slide_image | image_url: width: 400, format: 'webp' }} 400w,
                    {{ block.settings.slide_image | image_url: width: 800, format: 'webp' }} 800w,
                    {{ block.settings.slide_image | image_url: width: 1200, format: 'webp' }} 1200w,
                    {{ block.settings.slide_image | image_url: width: 1920, format: 'webp' }} 1920w
                  "
                  sizes="100vw"
                  alt="{{ block.settings.heading1 | escape }} {{ block.settings.heading2 | escape }}"
                  width="1200"
                  height="810"
                  {% if forloop.first %}
                    fetchpriority="high"
                  {% else %}
                    loading="lazy"
                  {% endif %}
                  decoding="async"
                >
              </div>
            {% else %}
              <div class="slide-image">
                <img
                  src="{{ 'banner.png' | asset_url }}"
                  alt="{{ 'sections.slider.default.alt_text' | t }}"
                  width="1200"
                  height="810"
                  {% if forloop.first %}
                    fetchpriority="high"
                  {% else %}
                    loading="lazy"
                  {% endif %}
                  decoding="async"
                >
              </div>
            {% endif %}

            <div
              class="slide-content {{ section.settings.content_position }}"
            >
              <div class="slide-text">
                {% if block.settings.heading1 != blank or block.settings.heading2 != blank %}
                  <h2
                    class="slide-heading"
                    style="color: {{ block.settings.color_text }}; font-size: {{ block.settings.heading_font_size | default: 80 }}px;"
                  >
                    {% if block.settings.heading1 != blank -%}
                      <span>
                        {{- block.settings.heading1 -}}
                        <br>
                      </span>
                    {%- endif %}
                    {% if block.settings.heading2 != blank -%}
                      <span>{{ block.settings.heading2 }}</span>
                    {%- endif %}
                  </h2>
                {% endif %}

                {% if block.settings.subheading != blank %}
                  <p
                    class="slide-subheading"
                    style="color: {{ block.settings.color_text }}; font-size: {{ block.settings.subheading_font_size | default: 16 }}px;"
                  >
                    {{ block.settings.subheading }}
                  </p>
                {% endif %}

                {% if block.settings.button_text != blank %}
                  <div class="slide-button-wrapper">
                    <a
                      href="#"
                      class="slide-button"
                      aria-label="{{ block.settings.button_text }}"
                    >
                      {{ block.settings.button_text }}
                    </a>
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      {% else %}
        <div class="slide">
          <div class="slide-image">
            <img
              src="{{ 'banner.png' | asset_url }}"
              alt="{{ 'sections.slider.default.alt_text' | t }}"
              width="1200"
              height="810"
              fetchpriority="high"
              decoding="async"
            >
          </div>
          <div class="slide-content {{ section.settings.content_position }}">
            <div class="slide-text">
              <h2 class="slide-heading">
                <span>{{ 'sections.slider.default.heading1' | t }}<br></span>
                <span>{{ 'sections.slider.default.heading2' | t }}</span>
              </h2>
              <p class="slide-subheading">
                {{ 'sections.slider.default.subheading' | t }}
              </p>
              <div class="slide-button-wrapper">
                <a href="#" class="slide-button" aria-label="{{ 'sections.slider.default.button_text' | t }}">
                  {{ 'sections.slider.default.button_text' | t }}
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="slide">
          <div class="slide-image">
            <img
              src="{{ 'banner.png' | asset_url }}"
              alt="{{ 'sections.slider.default.alt_text' | t }}"
              width="1200"
              height="810"
              loading="lazy"
              decoding="async"
            >
          </div>
          <div class="slide-content {{ section.settings.content_position }}">
            <div class="slide-text">
              <h2 class="slide-heading">
                <span>{{ 'sections.slider.default.heading1' | t }}<br></span>
                <span>{{ 'sections.slider.default.heading2' | t }}</span>
              </h2>
              <p class="slide-subheading">
                {{ 'sections.slider.default.subheading' | t }}
              </p>
              <a href="#" class="slide-button" aria-label="{{ 'sections.slider.default.button_text' | t }}">
                {{ 'sections.slider.default.button_text' | t }}
              </a>
            </div>
          </div>
        </div>
        <div class="slide">
          <div class="slide-image">
            <img
              src="{{ 'banner.png' | asset_url }}"
              alt="{{ 'sections.slider.default.alt_text' | t }}"
              width="1200"
              height="810"
              loading="lazy"
              decoding="async"
            >
          </div>
          <div class="slide-content {{ section.settings.content_position }}">
            <div class="slide-text">
              <h2 class="slide-heading">
                <span>{{ 'sections.slider.default.heading1' | t }}<br></span>
                <span>{{ 'sections.slider.default.heading2' | t }}</span>
              </h2>
              <p class="slide-subheading">
                {{ 'sections.slider.default.subheading' | t }}
              </p>
              <a href="#" class="slide-button" aria-label="{{ 'sections.slider.default.button_text' | t }}">
                {{ 'sections.slider.default.button_text' | t }}
              </a>
            </div>
          </div>
        </div>
      {% endif %}
    </div>

    {% if section.blocks.size > 1 or section.blocks.size == 0 %}
      <div class="slider-controls">
        <button class="slider-prev" aria-label="Previous slide">
          <svg width="6" height="11" viewBox="0 0 6 11" fill="#ffffff" xmlns="http://www.w3.org/2000/svg">
            <path d="M5.77754 9.66675L1.80488 5.69409L5.77754 1.72144C5.92988 1.58081 6.00605 1.41089 6.00605 1.21167C6.00605 1.00073 5.92988 0.819092 5.77754 0.666748C5.63691 0.526123 5.46113 0.455811 5.25019 0.455811C5.03926 0.455811 4.86348 0.526123 4.72285 0.666748L0.222851 5.16675C0.070507 5.31909 -0.00566483 5.50073 -0.00566483 5.71167C-0.00566483 5.91089 0.070507 6.08081 0.222851 6.22144L4.72285 10.7214C4.86348 10.8738 5.03926 10.95 5.25019 10.95C5.46113 10.95 5.63691 10.8738 5.77754 10.7214C5.92988 10.5808 6.00605 10.4109 6.00605 10.2117C6.00605 10.0007 5.92988 9.81909 5.77754 9.66675Z"/>
          </svg>
        </button>
        <button class="slider-next" aria-label="Next slide">
          <svg width="6" height="11" viewBox="0 0 6 11" fill="#ffffff" xmlns="http://www.w3.org/2000/svg">
            <path d="M1.27754 10.7214C1.13691 10.8738 0.961132 10.95 0.750195 10.95C0.539257 10.95 0.363476 10.8738 0.222851 10.7214C0.070507 10.5808 -0.00566483 10.4109 -0.00566483 10.2117C-0.00566483 10.0007 0.070507 9.81909 0.222851 9.66675L4.19551 5.69409L0.222851 1.72144C0.070507 1.58081 -0.00566483 1.41089 -0.00566483 1.21167C-0.00566483 1.00073 0.070507 0.819092 0.222851 0.666748C0.363476 0.526123 0.539257 0.455811 0.750195 0.455811C0.961132 0.455811 1.13691 0.526123 1.27754 0.666748L5.77754 5.16675C5.92988 5.31909 6.00605 5.50073 6.00605 5.71167C6.00605 5.91089 5.92988 6.08081 5.77754 6.22144L1.27754 10.7214Z"/>
          </svg>
        </button>
      </div>

      <div class="slider-dots">
        {% if section.blocks.size > 0 %}
          {% for block in section.blocks %}
            <button class="slider-dot" data-slide="{{ forloop.index0 }}" aria-label="Go to slide {{ forloop.index }}">
              <span></span>
            </button>
          {% endfor %}
        {% else %}
          {% for i in (0..2) %}
            <button class="slider-dot" data-slide="{{ i }}" aria-label="Go to slide {{ i | plus: 1 }}">
              <span></span>
            </button>
          {% endfor %}
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

{% style %}
  .slider-section {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
{% endstyle %}

{% schema %}
{
  "name": "t:sections.slider.name",
  "settings": [
    {
      "type": "select",
      "id": "content_position",
      "label": "t:sections.slider.settings.content_position.label",
      "options": [
        { "value": "middle-left", "label": "t:sections.slider.settings.content_position.options.middle_left.label" },
        { "value": "middle", "label": "t:sections.slider.settings.content_position.options.middle.label" },
        { "value": "middle-right", "label": "t:sections.slider.settings.content_position.options.middle_right.label" },
        { "value": "middle-top", "label": "t:sections.slider.settings.content_position.options.middle_top.label" },
        { "value": "middle-bottom", "label": "t:sections.slider.settings.content_position.options.middle_bottom.label" }
      ],
      "default": "middle"
    }
  ],
  "max_blocks": 5,
  "blocks": [
    {
      "type": "slide",
      "name": "t:sections.slider.blocks.slide.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "slide_image",
          "label": "t:sections.slider.blocks.slide.settings.slide_image.label"
        },
        {
          "type": "text",
          "id": "heading1",
          "label": "t:sections.slider.blocks.slide.settings.heading1.label",
          "default": "Stylish"
        },
        {
          "type": "text",
          "id": "heading2",
          "label": "t:sections.slider.blocks.slide.settings.heading2.label",
          "default": "Top Trending"
        },
        {
          "type": "color",
          "id": "color_text",
          "label": "t:sections.slider.blocks.slide.settings.color_text.label",
          "default": "#000"
        },
        {
          "type": "textarea",
          "id": "subheading",
          "label": "t:sections.slider.blocks.slide.settings.subheading.label",
          "default": "So soft you don't want to take it off."
        },
        {
          "type": "header",
          "content": "t:sections.slider.blocks.slide.settings.text_heading_subheading.content"
        },
        {
          "type": "range",
          "id": "heading_font_size",
          "label": "t:sections.slider.blocks.slide.settings.heading_font_size.label",
          "min": 16,
          "max": 80,
          "step": 2,
          "unit": "px",
          "default": 80
        },
        {
          "type": "range",
          "id": "subheading_font_size",
          "label": "t:sections.slider.blocks.slide.settings.subheading_font_size.label",
          "min": 16,
          "max": 80,
          "step": 2,
          "unit": "px",
          "default": 16
        },
        {
          "type": "header",
          "content": "t:sections.slider.blocks.slide.settings.button.content"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "t:sections.slider.blocks.slide.settings.button_text.label",
          "default": "Explore Now"
        },
        {
          "type": "header",
          "content": "t:sections.slider.blocks.slide.settings.padding_sections.content"
        },
        {
          "type": "range",
          "id": "padding_top",
          "label": "t:sections.slider.blocks.slide.settings.padding_top.label",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "px",
          "default": 0
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "label": "t:sections.slider.blocks.slide.settings.padding_bottom.label",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "px",
          "default": 0
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.slider.presets.default.name",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
