{% style %}
  .header-menu-item {
      {% if section.settings.submenu_width=='200px' %}
      position: relative;
      {% else %}
      position: static;
      {% endif %}
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 5px;
      padding-right: 30px;
      letter-spacing: 0;
      line-height: 1.5;
      cursor: pointer;
  }

  .header {
    padding: 25px 30px;
    height: 70px;
    {% if section.settings.submenu_width=='full' %}
    position: relative;
    {% else %}
    position: static;
    {% endif %}
  }

  .header-menu-sublist {
    {% if section.settings.submenu_width=='full' %}
    position: absolute;
    left: 0;
    right: 0;
    width: 100%;
    top: 70px;
    z-index: 1001;
    border-radius: 0;
    {% else %}
    width: 100%;
    left: 0;
    {% endif %}
  }
{% endstyle %}

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu_navbar",
      "label": "Menu"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "select",
      "id": "submenu_width",
      "label": "Submenu width",
      "options": [
        {
          "value": "200px",
          "label": "200px"
        },
        {
          "value": "full",
          "label": "Full width"
        }
      ],
      "default": "200px"
    }
  ]
}
{% endschema %}
