<section class="featured-collection">
  <div class="fc-container fade-in-left">
    <h2>{{ section.settings.title }}</h2>
    <p>{{ section.settings.description }}</p>
  </div>

  <div class="featured-collection-grid fade-in-left">
    <div class="featured-collection-img clothing">
      {% if section.settings.collection_img != blank %}
        <img
          src="{{ section.settings.collection_img | image_url: width: 300 }}"
          alt="{{ section.settings.title | escape }}"
          width="100%"
          height="100%"
          loading="lazy"
        >
        <a href="{{ section.settings.collection_btn_url }}" class="fc-btn">{{ section.settings.collection_btn_text }}</a>
      {% else %}
        <img
          src="{{ 'clothe.png' | asset_url }}"
          alt="{{ section.settings.title | escape }}"
          width="300"
          height="300"
          loading="lazy"
          class="fc-img"
          decoding="async"
        >
        <a class="fc-btn">Clothing</a>
      {% endif %}
    </div>

    <div class="featured-collection-img sunglesses">
      {% if section.settings.collection_img != blank %}
        <img
          src="{{ section.settings.collection_img_1 | image_url: width: 300 }}"
          alt="{{ section.settings.title | escape }}"
          width="100%"
          height="100%"
          loading="lazy"
        >
        <a href="{{ section.settings.collection_btn_url_1 }}" class="fc-btn">{{ section.settings.collection_btn_text_1 }}</a>
      {% else %}
        <img
          src="{{ 'sunglass.png' | asset_url }}"
          alt="{{ section.settings.title | escape }}"
          width="300"
          height="300"
          loading="lazy"
          decoding="async"
        >
        <a class="fc-btn">Sunglasses</a>
      {% endif %}
    </div>

    <div class="featured-collection-img bag">
      {% if section.settings.collection_img != blank %}
        <img
          src="{{ section.settings.collection_img_2 | image_url: width: 300 }}"
          alt="{{ section.settings.title | escape }}"
          width="100%"
          height="100%"
          loading="lazy"
        >
        <a href="{{ section.settings.collection_btn_url_2 }}" class="fc-btn">{{ section.settings.collection_btn_text_2 }}</a>
      {% else %}
        <img
          src="{{ 'bag.png' | asset_url }}"
          alt="{{ section.settings.title | escape }}"
          width="300"
          height="300"
          loading="lazy"
          decoding="async"
        >
        <a class="fc-btn">Bags</a>
      {% endif %}
    </div>

    <div class="featured-collection-img sneaker">
      {% if section.settings.collection_img != blank %}
        <img
          src="{{ section.settings.collection_img_3 | image_url: width: 300 }}"
          alt="{{ section.settings.title | escape }}"
          width="100%"
          height="100%"
          loading="lazy"
        >
        <a href="{{ section.settings.collection_btn_url_3 }}" class="fc-btn">{{ section.settings.collection_btn_text_3 }}</a>
      {% else %}
        <img
          src="{{ 'sneaker.png' | asset_url }}"
          alt="{{ section.settings.title | escape }}"
          width="300"
          height="300"
          loading="lazy"
          decoding="async"
        >
        <a class="fc-btn">Sneakers</a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "header",
      "content": "Title & Description"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Featured Collections"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Elevate your style with our chic featured collectionâ€”where fashion meets flair effortlessly."
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "collection_img",
      "label": "Choose Image Left"
    },
    {
      "type": "image_picker",
      "id": "collection_img_1",
      "label": "Choose Image Top"
    },
    {
      "type": "image_picker",
      "id": "collection_img_2",
      "label": "Choose Image Bottom"
    },
    {
      "type": "image_picker",
      "id": "collection_img_3",
      "label": "Choose Image Right"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "collection_btn_text",
      "label": "Button Text Left"
    },
    {
      "type": "text",
      "id": "collection_btn_text_1",
      "label": "Button Text Top"
    },
    {
      "type": "text",
      "id": "collection_btn_text_2",
      "label": "Button Text Bottom"
    },
    {
      "type": "text",
      "id": "collection_btn_text_3",
      "label": "Button Text Right"
    },
    {
      "type": "url",
      "id": "collection_btn_url",
      "label": "Button URL Left"
    },
    {
      "type": "url",
      "id": "collection_btn_url_1",
      "label": "Button URL Top"
    },
    {
      "type": "url",
      "id": "collection_btn_url_2",
      "label": "Button URL Bottom"
    },
    {
      "type": "url",
      "id": "collection_btn_url_3",
      "label": "Button URL Right"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
